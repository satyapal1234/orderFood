                    </tr>

                   
                </tbody>

                        
                   

             </table>
              

            </div> 
            <center><button class='btn btn-success' onclick='takeScreenShot()' style='padding: 10px 20px;border-radius:30px;'>Take Screenshot</button></center>
        </center>
    </section>





<script>
    var takeScreenShot = function() {
    html2canvas(document.getElementById("cont"), {
        onrendered: function (canvas) {
            var tempcanvas=document.createElement('canvas');
            tempcanvas.width=1000;
            tempcanvas.height=600;
            var context=tempcanvas.getContext('2d');
            context.drawImage(canvas,0,0,850,400,-50,100,800,400);
            var link=document.createElement("a");
            link.href=tempcanvas.toDataURL('image/jpg');   //function blocks CORS
            link.download = 'ebill.jpg';
            link.click();
        }
    });
}

</script>

